<?xml version="1.0"?>
<object
    name="portal_controlpanel"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="alpha.content">

    <configlet
        title="Custom Related Setting"
        action_id="alpha.connect.Dict"
        appId="alpha.connect"
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@categoriesControlPanel"
        icon_expr="string:/favicon.ico"
        visible="False"
        i18n:attributes="title">
            <permission>Manage portal</permission>
    </configlet>

    <configlet
        title="User PromoCode"
        action_id="alpha.connect.User"
        appId="alpha.connect"
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@UserControlPanel"
        icon_expr="string:/favicon.ico"
        visible="False">
            <permission>Manage portal</permission>
    </configlet>

    <configlet
        title="Product shipping fee"
        action_id="alpha.connect.Weight"
        appId="alpha.connect"
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@WeightControlPanel"
        icon_expr="string:/favicon.ico"
        visible="True">
            <permission>Manage portal</permission>
    </configlet>

    <configlet
        title="All Order"
        action_id="alpha.connect.AllOrder"
        appId="alpha.connect"
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@order_history"
        icon_expr="string:/favicon.ico"
        visible="True"
        i18n:attributes="title">
            <permission>Manage portal</permission>
    </configlet>

    <configlet
        title="Basic Inform"
        action_id="alpha.connect.Inform"
        appId="alpha.connect"
        category="Products"
        condition_expr=""
        url_expr="string:${portal_url}/@@basicInformControlPanel"
        icon_expr="string:/favicon.ico"
        visible="True">
            <permission>Manage portal</permission>
    </configlet>

</object>
